<!-- Validation failure messages -->
<% if @plan.errors.any? %>
  <% @plan.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Plan #<%= @plan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_plan/<%= @plan.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @plan.user_id %>">
      </div>

      <!-- Label and input for plan_date -->
      <div class="form-group">
        <label for="plan_date" class="control-label">
          Plan date
        </label>

        <input type="text" id="plan_date" name="plan_date" placeholder="Plan date" class="form-control" value="<%= @plan.plan_date %>">
      </div>

      <button class="btn btn-warning">
        Update Plan
      </button>
      or
      <a href="/plans/<%= @plan.id %>">Cancel</a>
    </form>
  </div>
</div>
